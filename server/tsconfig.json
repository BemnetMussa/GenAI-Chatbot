{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",    
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
   "types": ["node", "express"]  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}